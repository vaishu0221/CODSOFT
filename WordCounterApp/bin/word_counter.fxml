<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.layout.VBox?>

<VBox alignment="CENTER" spacing="10" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1">
    <Label text="Word Counter" />
    <TextArea fx:id="inputTextArea" promptText="Enter your text..." wrapText="true" />
    <Button text="Count Words" onAction="#countWords" />
    <Label fx:id="resultLabel" />
</VBox>
